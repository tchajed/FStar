# --------------------------------------------------------------------
ifndef FSTAR_HOME
   $(error "Please define the `FSTAR_HOME` variable before including this makefile.")
endif

include $(FSTAR_HOME)/src/gmake/fstar.mk

ifeq ($(OS),Windows_NT)
MSBUILD = msbuild
else
MSBUILD = xbuild
endif

%.uver: %.fst
	$(FSTAR) --verify_module $* $^

%.ucver: %.fst
	$(CFSTAR) --verify_module $* $^
